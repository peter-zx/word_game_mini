.container {
  padding: 20px;
  font-family: Arial, sans-serif;
  text-align: center;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.input-area {
  width: 90%;
  min-height: 150px;
  border: 1px solid #ccc;
  border-radius: 8px;
  padding: 10px;
  font-size: 16px;
  margin-bottom: 20px;
}

button {
  margin: 10px;
  background-color: #4CAF50;
  color: white;
  padding: 10px;
  border-radius: 8px;
  font-size: 16px;
  border: none;
}
